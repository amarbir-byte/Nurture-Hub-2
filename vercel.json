{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci --legacy-peer-deps --prefer-offline --no-audit",

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    }
  ],

  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/performance-metrics",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/security-scan",
      "schedule": "0 18 * * *"
    }
  ],

  "env": {
    "VITE_APP_URL": "https://nurture-hub.vercel.app",
